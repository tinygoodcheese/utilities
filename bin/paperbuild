#!/bin/sh
# brief : paper compilation + show for OS X
# made : 2015/11/03
# version : 0


if test -z $1 || test $1 = "-h" || test $1 = "-help" ; then
	    echo "options: '-h','-help'
   　　　 　output : shows help
 　　　　'paper'.tex
    　　　　output : compiles paper.tex and shows pdf made"
else
    platex ${1}.tex
    dvipdfmx ${1}.dvi
    echo "Show PDF? [y/n]"

    while :
    do
	read ans
	if test -n $ans; then
	    if test $ans = "y" ; then
	       open -a Preview "${1}.pdf"
	       break
	    elif test $ans = "n" ; then
		break
	    else echo "Please answer [y/n]"     
	    fi
	else echo "Please answer [y/n]"
	fi
    done
fi
	     
