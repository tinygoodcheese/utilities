#!/bin/sh
# brief : paper compilation + show for OS X
# made : 2015/11/03
# version : 0


if test -z $1 || test $1 = "-h" || test $1 = "-help" ; then
	    echo "options: '-h','-help'
   　　　 　output : shows help
 　　　　'paper'.tex
    　　　　output : compiles paper.tex and shows pdf made"
else
    platex ${1}.tex
    dvipdfmx ${1}.dvi
    open -a Preview "${1}.pdf"
fi
	     
